<div class="well">
  <h4>Categories</h4>
  <div class="row">
    <div class="col-lg-12">
      <ul class="list-unstyled">
        <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, { :controller => "video", :action => "index", category:category.id } %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
